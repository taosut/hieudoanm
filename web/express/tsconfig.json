{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/scripts"]
}